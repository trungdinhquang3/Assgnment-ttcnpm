extends ../layouts/header.pug

block content

  .container
    h1 FoodList

    form.form-group.row(action='/cook/foodList', method="POST")
      label.col-sm-2.col-form-label(for='name') Food Name 
      input#name.form-control.col-sm-10.mb-3(type='text', name='name')

      label.col-sm-2.col-form-label(for='price') Food Price
      input#price.form-control.col-sm-10.mb-3(type='text', name="price")

      button.btn.btn-primary.m-auto Add To List
    .mt-10(style='margin:50px 0 10px 0;')
      a(href='/cook/foodList/update-state-to-true') Update All To "Còn"
      a(href='/cook/foodList/update-state-to-false', style='display:inline-block; margin-left: 30px') Update All To "Hết"
    table.table.table-bordered
      tr
        th FoodID
        th Food Name
        th Food Price
        th State
      each food in foodList
        tr
          td= food.id
          td= food.name
          td= food.price
          td
            a(href='/cook/foodList/state/' + food.id)= food.state == true ? "Còn" : "Hết"
